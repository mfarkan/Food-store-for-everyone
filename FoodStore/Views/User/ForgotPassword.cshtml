@model ForgetPasswordViewModel
@{
    ViewData["Title"] = viewLocalizer["ForgotPasswordTitle"];
    Layout = "~/Views/Shared/_signInLayout.cshtml";
}
<title>@ViewData["Title"]</title>
<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
<div class="col-lg-6">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">@viewLocalizer["ForgotPasswordTitle"]</h1>
        </div>
        @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.Error)))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }
        @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.Success)))
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.Success
            </div>
        }
        <form asp-controller="User" asp-action="ForgotPassword" asp-antiforgery="true" autocomplete="off" method="post">
            <div asp-validation-summary="All">

            </div>
            <div class="form-group">
                <div>
                    @Html.LabelFor(model => model.Email)
                </div>
                <div>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-user" } })
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">@sharedLocalizer["Send"]</button>
            </div>
            <hr>
            <div class="text-center">
                <a class="small" asp-controller="User" asp-action="Create">@viewLocalizer["CreatePage"]</a>
            </div>
            <div class="text-center">
                <a class="small" asp-controller="User" asp-action="SignIn">@viewLocalizer["SignInPage"]</a>
            </div>
        </form>
    </div>
</div>